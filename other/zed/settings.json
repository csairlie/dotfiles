// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "project_panel": {
    "dock": "left",
    "git_status": false
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "assistant": {
    "button": false
  },
  "git": {
    "git_gutter": "hide"
  },
  "theme": "One Dark",
  "features": {
    "copilot": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "scrollbar": {
    "git_diff": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "vim_mode": false,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "enable_language_server": false
}
